<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="#FFF2E8"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="내용을 읽고 다음 중 하나를 선택해 주세요"
        android:textStyle="bold"
        android:layout_marginBottom="20dp"
         />

    <TextView
        android:id="@+id/contents"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="칼럼 내용"
        android:layout_marginBottom="20dp"
        android:background="@drawable/rounded_text"
        android:textColor="@color/black"
        android:padding="10dp"
         />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/dontKnow"
            android:textStyle="bold"
            android:text="잘 이해하지 못했어요"
            android:layout_weight="1"
            android:layout_marginRight="50dp"
            android:background="@drawable/rounded_button"


            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/didKnow"
            android:textStyle="bold"
            android:text="이해했어요"
            android:layout_weight="4"
            android:background="@drawable/rounded_button"
           />


    </LinearLayout>

    <!-- 버튼 클릭시 나타나야 하는 부분-->
    <LinearLayout
        android:id="@+id/addExplain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:visibility="invisible">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="단어를 모르겠어요" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/rounded_text">

            <TextView
                android:id="@+id/word1"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:padding="10dp"
                android:layout_weight="4"
                android:textSize="16dp"
                android:text="예시 단어 1" />

            <ImageButton
                android:id="@+id/noteBtn1"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:src="@drawable/bookmark_outline"
                android:contentDescription="북마크"
                android:background="@android:color/transparent"
                />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/rounded_text"
            android:layout_marginTop="20dp">

            <TextView
                android:id="@+id/word2"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:padding="10dp"
                android:layout_weight="4"
                android:textSize="16dp"
                android:text="예시 단어 2" />

            <ImageButton
                android:id="@+id/noteBtn2"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:src="@drawable/bookmark_outline"
                android:contentDescription="북마크"
                android:background="@android:color/transparent"
                />

        </LinearLayout>


    </LinearLayout>

</LinearLayout>